{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6"],
    "noImplicitAny": false,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "outDir": "dist",
    "noEmitOnError": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "index.ts",
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "__codegen__",
    "test/ng-app",
    "test/aot-cleanup-transformer"
  ]
}
