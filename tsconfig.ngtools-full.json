{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "noEmit": true,
    "noEmitHelpers": true,
    "strictNullChecks": false,
    "baseUrl": ".",
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "src",
    "dist",
    "test/testing",
    "test/*.spec.ts",
    "test/aot-cleanup-transformer",
    "test/ng-app/main.browser.aot.ngc.ts",
    "test/ng-app/main.browser.aot.cli.ts",
    "test/ng-app/main.browser.aot.plugin.ts",
    "test/ng-app/main.browser.aot.plugin-full.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },
  "angularCompilerOptions": {
    "genDir": "dist/test/codegen_ngtools-full"
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
